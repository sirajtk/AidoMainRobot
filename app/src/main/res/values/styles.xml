<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange</item>
    </style>
            <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
        <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
        <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="PreferencesTheme" parent="AppTheme">


        <item name="android:background">@color/skyblue</item>
        <item name="android:windowBackground">@drawable/settingslayer</item>
        <item name="android:activatedBackgroundIndicator">@color/skyblue</item>
        <item name="android:listChoiceBackgroundIndicator">@color/skyblue</item>
        <item name="android:listChoiceIndicatorSingle">@color/skyblue</item>
        <item name="android:listPreferredItemPaddingEnd">25dp</item>
        <item name="android:listPreferredItemPaddingLeft">20dp</item>
        <item name="android:listPopupWindowStyle">@color/skyblue</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:editTextColor">#fff</item>
<item name="android:drawablePadding">20dp</item>
        <item name="android:summary">@style/MyPreferenceTheme1</item >
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:preferenceCategoryStyle">@style/preferencecategory</item>
        <item name="android:dialogPreferenceStyle">@style/preferencecategory</item>
        <item name="colorAccent">#fff</item>
        <item name="android:listViewStyle">@style/MyPreferenceTheme</item>
        <item name="android:textColorPrimary">#fff</item>




    </style>


    <style name="ThemeCustom" parent="Theme.AppCompat">
        <item name="android:listViewStyle">@style/MyListViewStyle</item>
    </style>
    <style name="MyListViewStyle" parent="@android:style/Widget.Holo.Light.ListView">
        <item name="android:background">@color/skyblue</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:listSelector">@drawable/my_selector</item>-->
    </style>
    <style name="preferencecategory" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyPreferenceTheme" parent="AppTheme">

        <item name="android:textColor">#0d0d0d</item>
        <item name="android:textSize">20sp</item>

        <item name="android:textColorSecondary">#e24747</item>


    </style>
    <style name="MyPreferenceTheme1" parent="AppTheme">

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">10sp</item>

        <!--<item name="android:textColorSecondary">#fff</item>-->


    </style>


</resources>
