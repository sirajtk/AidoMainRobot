<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/skyblue"
    tools:context="com.whitesun.aidoface.settings.face.FaceRecognitionSetting">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@drawable/settingslayer"
        >

        <TextView
            android:id="@+id/dialog_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:textSize="30sp"

            android:text="Enroll Face"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:background="@null"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textColorHint="@color/white"
            android:id="@+id/edittext_facename"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="67dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewcolor"/>

        <TextView
            android:id="@+id/dialog_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:textColor="@color/white"
            android:text=""/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_below="@id/dialog_info"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:background="@drawable/connecttowifibutton"
                android:text="Cancel"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/darkskyblue"/>

            <Button
                android:layout_marginLeft="30dp"
                android:id="@+id/dialog_ok"
                android:layout_width="200dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/darkskyblue"
                android:layout_height="match_parent"

                android:background="@drawable/connecttowifibutton"
                android:text="Enroll"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
